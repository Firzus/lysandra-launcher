{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "HuzStudio",
  "version": "0.0.4",
  "identifier": "com.huzstudio.launcher",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "tsc && vite build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "HuzStudio",
        "width": 1280,
        "height": 720,
        "fullscreen": false,
        "resizable": false,
        "decorations": false,
        "backgroundColor": "#0C0A09",
        "center": true,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default",
        "opener",
        "process",
        "dialog",
        "store",
        "upload",
        "file-system",
        "desktop",
        "windows-permissions"
      ]
    }
  },
  "bundle": {
    "createUpdaterArtifacts": false,
    "active": true,
    "targets": ["nsis", "appimage", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "installerHooks": "./windows/hooks.nsi",
        "minimumWebview2Version": "110.0.1531.0",
        "displayLanguageSelector": false
      },
      "webviewInstallMode": {
        "type": "offlineInstaller"
      },
      "wix": {
        "fragmentPaths": ["./windows/fragments/registry.wxs"],
        "componentRefs": ["HuzStudioRegistryEntries"]
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": ["https://huz-studio-api.up.railway.app/api/v1/manifests/launcher"],
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IHJzaWduIGVuY3J5cHRlZCBzZWNyZXQga2V5ClJXUlRZMEl5TVRJMU1ERXdOREF3TURJd01ERXdNREF3TURJd01ERXdOREF3TURJd01ERXdOREF3"
    }
  }
}
