{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "updater",
  "description": "Capabilities for updater manager commands",
  "context": "local",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:event:default",
    "core:event:allow-listen",
    "core:event:allow-emit",
    "updater:default",
    "updater:allow-check",
    "updater:allow-download",
    "updater:allow-install",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": ["/C", "start", "/wait", "/B", "/elevated"]
        },
        {
          "name": "powershell",
          "cmd": "powershell",
          "args": ["-Command", "Start-Process", "-Verb", "RunAs"]
        }
      ]
    }
  ],
  "platforms": ["windows", "macOS", "linux"]
}
